
@{
    ViewBag.Title = "Chat";
}

<style>
    div.panel-body {
        overflow: scroll;
        background: url('http://subtlepatterns.com/patterns/geometry2.png');
    }
</style>
<h2>ChatBox</h2>
<div class="chat-panel panel panel-default">
    <div class="panel-heading">
        ChatBox using SingalR
        <i class="fa fa-paper-plane fa-fw"></i>
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body" id="chat" style="height:250px;">
        <input type="hidden" id="displayname" />

        <p id="discussion"></p>
    </div>
    <!-- /.panel-body -->
    <div class="panel-footer">
        <div class="input-group">
            <input id="message" type="text" name="message" class="form-control input-sm" placeholder="Type your message here..." />

            <span class="input-group-btn">
                <input type="button" class="btn btn-warning btn-sm" id="sendmessage" value="Send">

            </span>
        </div>
    </div>
</div>

@section scripts {
    <!-- Reference the signalr library -->
    <script src="~/Scripts/jquery.signalR-2.4.1.min.js"></script>
    <!-- Reference the autogenerated SignalR hub script-->
    <script src="~/signalr/hubs/"></script>
    <!-- SignalR script to update the chat page and send message. -->
    <script>

        $(function() {
            // Reference the auto generated proxy hub
            var chat = $.connection.chatHub;
            // Create a function that the hub can call back to display message
            chat.client.addNewMessageToPage = function (name, message) {
                console.log(message);
                if (name == 'Hasan') {
                    $('#discussion').append('<p style="color:green; text-align:left; width:250px"><strong><img = src="https://www.phplivesupport.com/pics/icons/avatars/public/avatar_7.png" title="Hasan">'
                        + ' </strong>'  + message  + '</p>');
                } else {
                    $('#discussion').append('<p style="color:red; text-align:right; width:250px"><strong><img = src="https://www.phplivesupport.com/pics/icons/avatars/public/avatar_71.png" title="Kisi">'
                        + ' </strong>' +  message + '</p>');
                }
            };

            // Get the user name and store it to prepend to message
            $('#displayname').val(prompt('Kullanici adi girin:', ''));
            // Set initial focus to messageg input box.
            $('#message').focus();
            // Start to connection
            $.connection.hub.start().done(function () {
                $('#sendmessage').click(function () {
                    //Call send method on the hub
                    chat.server.send($('#displayname').val(), $('#message').val());
                    console.log($('#message').val());
                    //Clear text box and reset focus for next comment
                    $('#message').val('').focus();
                });

            });
        });

        function htmlEncode(value) {
            var encodedValue = $('<div />').text(value);
            return encodedValue;
        }

    </script>
}